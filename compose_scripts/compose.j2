web:
  image: nginx:latest
  ports:
   - "80:80"
   - "443:443"
  volumes:
   - {{ work_dir }}/www:/usr/share/nginx/html:ro
   - {{ work_dir }}/nginx/conf:/etc/nginx:ro
  links:
   - gogs

gogs:
    image: gogs/gogs:latest
    ports:
     - "10022:22"
     - "10080:3000"
    volumes:
    - {{ work_dir }}/gogs:/data